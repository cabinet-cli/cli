{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "baseUrl": ".",
        "strict": true,
        "target": "es2017",
        "paths": {
            "@root/*": ["./src/*"],
            "@app/*": ["./src/app/*"],
            "@libs/*": ["./src/libs/*"]
        }
    },
    "include": ["src/**/*"]
}
